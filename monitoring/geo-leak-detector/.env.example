# Geo-Leak Detector Environment Configuration

# Application
GEO_ENV=development
GEO_DEBUG=false
GEO_SECRET_KEY=change-me-in-production

# API Server
GEO_API_HOST=0.0.0.0
GEO_API_PORT=8080
GEO_CORS_ORIGINS=["*"]

# Database (PostgreSQL)
GEO_DB_HOST=localhost
GEO_DB_PORT=5432
GEO_DB_NAME=geo_leak_detector
GEO_DB_USER=geo_user
GEO_DB_PASSWORD=changeme

# Redis
GEO_REDIS_HOST=localhost
GEO_REDIS_PORT=6379
GEO_REDIS_DB=0
GEO_REDIS_PASSWORD=

# Telegram Bot
GEO_TELEGRAM_ENABLED=false
GEO_TELEGRAM_BOT_TOKEN=
GEO_TELEGRAM_CHAT_ID=
GEO_TELEGRAM_ALERT_INFO=false
GEO_TELEGRAM_ALERT_WARNING=true
GEO_TELEGRAM_ALERT_CRITICAL=true

# Prometheus Metrics
GEO_PROMETHEUS_ENABLED=true
GEO_PROMETHEUS_PORT=9090
GEO_PROMETHEUS_ENDPOINT=/metrics

# Detection Settings
GEO_CHECK_INTERVAL=30
GEO_AUTO_REMEDIATE=true
GEO_KILLSWITCH_SCRIPT=/usr/local/bin/killswitch.sh

# Expected values (comma-separated)
GEO_EXPECTED_EXIT_IPS=
GEO_EXPECTED_DNS_SERVERS=127.0.0.1,::1

# WebRTC Check
GEO_WEBRTC_CHECK_ENABLED=true

# MAPE-K Integration
GEO_MAPEK_ENABLED=true
GEO_MAPEK_NODE_ID=geo-leak-detector
GEO_CONSCIOUSNESS_THRESHOLD=0.5
GEO_MAPEK_API=http://localhost:8000/api/v1/mapek
