{
  "dashboard": {
    "title": "x0tta6bl4 Overview",
    "tags": ["x0tta6bl4", "mesh", "self-healing"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"x0tta6bl4\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(x0tta6bl4_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(x0tta6bl4_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(x0tta6bl4_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Dependency Health",
        "type": "table",
        "targets": [
          {
            "expr": "x0tta6bl4_dependencies_health",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "PQC Handshake Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(x0tta6bl4_pqc_handshakes_total[5m]) / (rate(x0tta6bl4_pqc_handshakes_total[5m]) + rate(x0tta6bl4_pqc_handshake_failures_total[5m]))",
            "legendFormat": "Success Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "MAPE-K Cycles",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(x0tta6bl4_mapek_cycles_total[5m])",
            "legendFormat": "Cycles/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"x0tta6bl4.*\"}[5m])",
            "legendFormat": "CPU"
          },
          {
            "expr": "container_memory_usage_bytes{pod=~\"x0tta6bl4.*\"} / 1024 / 1024",
            "legendFormat": "Memory (MB)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ]
  }
}

