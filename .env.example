# x0tta6bl4 Environment Configuration
# ====================================
# Copy this file to .env and fill in the actual values
# DO NOT commit .env to version control!
# Generate strong secrets: python -c "import secrets; print(secrets.token_urlsafe(32))"

# ─────────────────────────────────────────
# DATABASE CONFIGURATION
# ─────────────────────────────────────────

# PostgreSQL Database URL (main database)
# Format: postgresql://user:password@host:port/database
# Default (dev only): sqlite:///./x0tta6bl4.db
DATABASE_URL=postgresql://x0tta6bl4:generate_strong_password_here@localhost:5432/x0tta6bl4

# ─────────────────────────────────────────
# SECURITY & AUTHENTICATION
# ─────────────────────────────────────────

# Flask Secret Key (for session management)
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
FLASK_SECRET_KEY=generate_strong_secret_key_here

# JWT Secret Key for authentication tokens
JWT_SECRET_KEY=generate_strong_jwt_secret_here

# CSRF Secret Key for FastAPI
CSRF_SECRET_KEY=generate_strong_csrf_secret_here

# ─────────────────────────────────────────
# TELEGRAM BOT CONFIGURATION
# ─────────────────────────────────────────

# Telegram Bot Token from @BotFather
# Get it: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ─────────────────────────────────────────
# CRYPTOCURRENCY WALLETS & API KEYS
# ─────────────────────────────────────────

# USDT (TRC-20) Wallet Address for payment collection
USDT_TRC20_WALLET=your_usdt_trc20_wallet_address_here

# TON Wallet Address for payment collection
TON_WALLET=your_ton_wallet_address_here

# TronGrid API Key for TRON/USDT verification
# Get from: https://www.trongrid.io/
TRON_API_KEY=your_trongrid_api_key_here

# TON API Key for TON payment verification
# Get from: https://tonapi.io/
TON_API_KEY=your_tonapi_key_here

# ─────────────────────────────────────────
# BLOCKCHAIN CONFIGURATION
# ─────────────────────────────────────────

# Blockchain Private Key (Base Sepolia Testnet)
OPERATOR_PRIVATE_KEY=0x_your_private_key_here

# Contract Address
CONTRACT_ADDRESS=0x3f645dfa2a2a16725ed961d16f1667a13484bdd3

# RPC URL
RPC_URL=https://sepolia.base.org

# ─────────────────────────────────────────
# NODE & NETWORK CONFIGURATION
# ─────────────────────────────────────────

# Node Configuration
NODE_ID=node-001
SOCKS_PORT=10809
DASHBOARD_PORT=8080

# Mesh Network Bootstrap Nodes
BOOTSTRAP_NODES=89.125.1.107:10809,62.133.60.252:10809

# ─────────────────────────────────────────
# FASTAPI CONFIGURATION
# ─────────────────────────────────────────

# Environment: development, testing, production
ENVIRONMENT=development

# Enable debug mode (development only!)
DEBUG=false

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# ─────────────────────────────────────────
# STRIPE CONFIGURATION (Payment Processing)
# ─────────────────────────────────────────

# Production Keys
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_PRICE_ID=price_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Test Keys (recommended for development)
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_PRICE_ID=price_test_
STRIPE_WEBHOOK_SECRET=whsec_test_

# Stripe URLs
STRIPE_SUCCESS_URL=https://yourdomain.com/?success=1
STRIPE_CANCEL_URL=https://yourdomain.com/?canceled=1

# ─────────────────────────────────────────
# LOGGING CONFIGURATION
# ─────────────────────────────────────────

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ─────────────────────────────────────────
# OPTIONAL: EXTERNAL INTEGRATIONS
# ─────────────────────────────────────────

# Redis URL for caching (optional)
# Format: redis://user:password@host:port/db
# REDIS_URL=redis://localhost:6379/0

# SendGrid API Key (for email notifications)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

