{
  "dashboard": {
    "title": "x0tta6bl4 Token Economics (X0T)",
    "tags": ["token", "dao", "economics", "x0tta6bl4"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Token Supply",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(x0t_token_balance) + sum(x0t_token_staked)",
            "legendFormat": "Circulating",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total Staked",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(x0t_token_staked)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Staking Ratio",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(x0t_token_staked) / (sum(x0t_token_balance) + sum(x0t_token_staked)) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 30, "color": "yellow"},
              {"value": 50, "color": "green"}
            ]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 4,
        "title": "Active Stakers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "count(x0t_token_staked > 0)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "orange"},
                {"value": 10, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Token Balances by Node",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "topk(10, x0t_token_balance)",
            "legendFormat": "{{node_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 1000, "color": "green"},
                {"value": 10000, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Staked Tokens by Node",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "topk(10, x0t_token_staked)",
            "legendFormat": "{{node_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "purple"},
                {"value": 500, "color": "green"},
                {"value": 5000, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Token Transfers (rate/5m)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(x0t_token_transfers_total[5m])) by (from_node)",
            "legendFormat": "From: {{from_node}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Transfers/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Resource Payments (rate/5m)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(x0t_resource_payments_total[5m])) by (resource_type)",
            "legendFormat": "{{resource_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Payments/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Epoch Rewards Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(increase(x0t_token_rewards_distributed_total[1h])) by (node_id)",
            "legendFormat": "{{node_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Tokens Rewarded"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Revenue by Resource Type (24h)",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "sum(increase(x0t_resource_payments_total[24h])) by (resource_type)",
            "legendFormat": "{{resource_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right"
          }
        }
      },
      {
        "id": 11,
        "title": "Top Earners (Providers)",
        "type": "table",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 28},
        "targets": [
          {
            "expr": "topk(10, sum(increase(x0t_resource_payments_total[24h])) by (provider))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "id": 12,
        "title": "Top Spenders (Payers)",
        "type": "table",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 28},
        "targets": [
          {
            "expr": "topk(10, sum(increase(x0t_resource_payments_total[24h])) by (payer))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      }
    ]
  }
}
