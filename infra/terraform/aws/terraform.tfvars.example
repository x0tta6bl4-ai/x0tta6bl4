# AWS Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"
environment = "production"

# Cluster Configuration
cluster_name       = "x0tta6bl4"
kubernetes_version = "1.28"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

availability_zones = [
  "us-east-1a",
  "us-east-1b",
  "us-east-1c"
]

public_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24",
  "10.0.3.0/24"
]

private_subnet_cidrs = [
  "10.0.11.0/24",
  "10.0.12.0/24",
  "10.0.13.0/24"
]

# Node Group Configuration
node_min_size     = 3
node_max_size     = 10
node_desired_size = 3

node_instance_types = [
  "t3.medium"
]

# Example for different environments:
#
# Development:
# environment = "dev"
# node_min_size = 1
# node_max_size = 3
# node_desired_size = 1
# node_instance_types = ["t3.small"]
#
# Staging:
