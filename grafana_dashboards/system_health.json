      {
        "id": 9,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(x0tta6bl4_errors_total[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 2,
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              }
            }
          }
        }
      }
    ],
